<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ashishrajput.abcd.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME 1"
        android:layout_marginTop="54dp"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#020202"
        android:visibility="visible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="24"
        android:id="@+id/e1"
        android:textSize="16dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#c3b7b7"
        android:layout_alignEnd="@+id/e0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRY NO. 1"
        android:id="@+id/textView2"
        android:layout_below="@+id/e1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#020202" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e2"
        android:maxLength="24"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#c3b7b7"
        android:layout_alignEnd="@+id/e1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME 2"
        android:id="@+id/textView4"
        android:layout_below="@+id/e2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#020202" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:maxLength="24"
        android:ems="10"
        android:id="@+id/e3"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#c3b7b7"
        android:layout_alignEnd="@+id/e2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRY NO. 2"
        android:id="@+id/textView5"
        android:layout_below="@+id/e3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#020202" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e4"
        android:maxLength="24"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/e3"
        android:layout_alignEnd="@+id/e3"
        android:backgroundTint="#c3b7b7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME 3"
        android:id="@+id/textView6"
        android:layout_below="@+id/e4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#020202" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="24"
        android:id="@+id/e5"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#c3b7b7"
        android:layout_alignEnd="@+id/e4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRY NO. 3"
        android:id="@+id/textView7"
        android:layout_below="@+id/e5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#020202" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e6"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/e5"
        android:layout_alignEnd="@+id/e5"
        android:maxLength="24"
        android:backgroundTint="#c3b7b7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button"
        android:onClick="button"
        android:layout_alignTop="@+id/e5"
        android:layout_alignParentEnd="true"
        android:background="#7dc5bafb" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e0"
        android:maxLength="24"
        android:hint="TEAM NAME"
        android:backgroundTint="#c3b7b7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Fields"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/e6"
        android:layout_alignStart="@+id/button"
        android:background="#68bdfed1"
        android:onClick="clear"/>

</RelativeLayout>
